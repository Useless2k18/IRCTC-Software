<UserControl x:Class="BusinessLogicWPF.View.LoginAndRegister.UserControls.LoginSelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BusinessLogicWPF.View.LoginAndRegister.UserControls"
             mc:Ignorable="d" 
             Height="Auto"
             d:DesignWidth="500">
    <Grid Margin="0,0,0,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" x:Name="ButtonLoginAsAdmin"
                Content="Login As ADMIN"
                Width="350" Margin="10,10,10,10"
                FontSize="18" Click="ButtonLoginAsAdmin_Click"/>
        <Button Grid.Row="1" x:Name="ButtonLoginAsStationMaster"
                Content="Login As Station Master"
                Width="350" Margin="10,10,10,10"
                FontSize="18" Click="ButtonLoginAsStationMaster_Click"/>
        <Button Grid.Row="2" x:Name="ButtonLoginAsTte"
                Content="Login As Traveling Ticket Examiner"
                Width="350" Margin="10,10,10,10"
                FontSize="18" Click="ButtonLoginAsTte_Click"/>
    </Grid>
</UserControl>
