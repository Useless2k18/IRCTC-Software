<UserControl
    x:Class="BusinessLogicWPF.View.Admin.UserControls.AddStation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BusinessLogicWPF.View.Admin.UserControls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:admin="clr-namespace:BusinessLogicWPF.ViewModel.Admin"
    xmlns:domain="clr-namespace:BusinessLogicWPF.Domain"
    xmlns:designAndValidation="clr-namespace:BusinessLogicWPF.DesignAndValidation"
    Width="Auto"
    Height="Auto"
    MinHeight="430"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance admin:AddStationViewModel, d:IsDesignTimeCreatable=False}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" MaxHeight="400"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid
            Grid.Row="1"
            Grid.Column="0"
            MinWidth="400">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <ComboBox
                x:Name="ComboBoxZoneName"
                Grid.Row="0"
                Margin="10,0,10,5"
                materialDesign:HintAssist.Hint="Enter Zone Name"
                IsEnabled="False"
                Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                ItemsSource="{Binding}"
                SelectionChanged="ComboBoxZoneNameOnSelectionChanged">
                <ComboBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel
                            RequestBringIntoView="FrameworkElementOnRequestBringIntoView"/>
                    </ItemsPanelTemplate>
                </ComboBox.ItemsPanel>
            </ComboBox>

            <ComboBox
                x:Name="ComboBoxDivisionName"
                Grid.Row="1"
                Margin="10,10,10,5"
                IsEnabled="False"
                materialDesign:HintAssist.Hint="Enter Division Name"
                Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                ItemsSource="{Binding}">
                <ComboBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel
                            RequestBringIntoView="FrameworkElementOnRequestBringIntoView"/>
                    </ItemsPanelTemplate>
                </ComboBox.ItemsPanel>
            </ComboBox>

            <TextBox
                x:Name="TextBoxStationCode"
                CharacterCasing="Upper"
                Grid.Row="2"
                Margin="10,10,10,5"
                materialDesign:HintAssist.Hint="Enter Station Code"
                MaxLength="8"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                <TextBox.Text>
                    <Binding 
                        Path="StationCode"
                        UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <designAndValidation:NotEmptyValidationRule ValidatesOnTargetUpdated="True" />
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>

            <TextBox
                x:Name="TextBoxStationName"
                Grid.Row="3"
                Margin="10,10,10,5"
                materialDesign:HintAssist.Hint="Enter Station Name"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                <TextBox.Text>
                    <Binding 
                        Path="StationName"
                        UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <designAndValidation:NotEmptyValidationRule ValidatesOnTargetUpdated="True" />
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>


            <TextBox
                x:Name="TextBoxPinCode"
                Grid.Row="4"
                Margin="10,10,10,5"
                materialDesign:HintAssist.Hint="Enter PIN Code"
                DataObject.Pasting="TextBoxPinCodeOnPasting"
                MaxLength="6"
                PreviewTextInput="TextBoxPinCodePreviewTextInput"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                <TextBox.Text>
                    <Binding 
                        Path="PinCode"
                        UpdateSourceTrigger="PropertyChanged"
                        ValidatesOnExceptions="True">
                        <Binding.ValidationRules>
                            <designAndValidation:NotEmptyValidationRule ValidatesOnTargetUpdated="True" />
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
        </Grid>

        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            MinWidth="200"
            Margin="50,20,20,20"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom">
            
            <Button
                x:Name="ButtonReset"
                Style="{StaticResource MaterialDesignRaisedLightButton}"
                Margin="20"
                Click="ButtonResetOnClick">
                <TextBlock>
                    <materialDesign:PackIcon
                        Kind="Refresh"
                        Margin="5,0,0,-3"/>
                    <Run Text="Reset"/>
                </TextBlock>
            </Button>
            
            <Button
                x:Name="ButtonAccept"
                Click="ButtonAcceptOnClick"
                Margin="20"
                materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                materialDesign:ButtonProgressAssist.IsIndicatorVisible="False"
                materialDesign:ButtonProgressAssist.Value="-1"
                Style="{StaticResource MaterialDesignRaisedAccentButton}">
                <TextBlock>
                    <materialDesign:PackIcon Kind="TickCircle" />
                    <Run Text="Accept" />
                </TextBlock>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
