<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:BusinessLogicWPF.Style"
                    xmlns:customControl="clr-namespace:BusinessLogicWPF.Style"
                    xmlns:class="clr-namespace:BusinessLogicWPF.Style.Class">

    <Style x:Key="TextBoxWithPic" TargetType="TextBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border BorderBrush="{x:Null}"
                            VerticalAlignment="Center">

                        <DockPanel Margin="20,10,30,10">
                            <Image Source="../Images/user.png" Height="18" DockPanel.Dock="Left"/>
                            <class:NullTextBox NullText="Enter Username" Margin="10,0,0,0"/>
                        </DockPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>

        </Setter>
    </Style>
    
</ResourceDictionary>